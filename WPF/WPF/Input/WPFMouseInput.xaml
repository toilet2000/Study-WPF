<Window x:Class="WPF.Input.WPFMouseInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Input"
        mc:Ignorable="d"
        Title="WPFMouseInput" Height="300" Width="300">
    <StackPanel>
        <Rectangle x:Name="mrRec" Fill="AliceBlue"
                   MouseEnter="OnMouseEnter" 
                   MouseLeave="OnMouseLeave"
                   MouseMove="OnMouseMove"
                   MouseDown="OnMouseDown"
                   Height="100" Margin="20" />
        <TextBlock x:Name="txt1" Height="31" HorizontalAlignment="Right" Width="250" Margin="0,0,0,0" />
        <TextBlock x:Name="txt2" Height="31" HorizontalAlignment="Right" Width="250" Margin="0,0,0,0" />
        <TextBlock x:Name="txt3" Height="31" HorizontalAlignment="Right" Width="250" Margin="0,0,0,0" />
        

    </StackPanel>
</Window>
